<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/preview"
    tools:context=".Post"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/Lin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/Lin1"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/adamina"
                android:text="Post"
                android:textColor="#ffff00"
                android:textSize="40sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_bg"
                android:hint="Project Name"
                android:inputType="text"
                android:padding="15dp"
                android:text=""
                android:textSize="20sp" />

            <EditText
                android:id="@+id/project_description"
                android:layout_width="match_parent"
                android:layout_height="207dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/edt_bg"
                android:hint="Decription"
                android:inputType="textMultiLine"
                android:paddingLeft="150dp"
                android:padding="15dp"
                android:text=""
                android:textSize="20sp" />
            <TextView
                android:id="@+id/txtsel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/edt_bg"
                android:padding="15dp"
                android:text=""
                android:visibility="invisible"
                android:textSize="20sp" />
            <Spinner
                android:id="@+id/spinner"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"
                android:layout_height="wrap_content" />



            <EditText
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/edt_bg"
                android:hint="Price"
                android:inputType="text"
                android:padding="15dp"
                android:text=""
                android:textSize="20sp" />

            <Button
                android:layout_below="@+id/post_project"
                android:id="@+id/btn_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_register"
                android:layout_marginTop="30dp"
                android:text="Post Project"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="@color/colorRegister" />




        </LinearLayout>


    </ScrollView>

</RelativeLayout>